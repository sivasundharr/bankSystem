<h1>Customers</h1>
<div class="row">
  <% users.forEach((user) => { %>
    
      <div class="col-sm-6 mb-5">
    <div class="card text-white bg-blue-grad">
      <div class="card-image" style="text-align: center;width:100px;padding-top:20px;height:100px;background:linear-gradient(to right, #30CFD0 0%, #330867 100%);color:white;font-size: 2rem;font-weight: bolder;border-radius: 50%;position:relative;top: -45px;left:50%;">
        <%=user.firstName.substring(0,1).toUpperCase()%> 
      </div>
      <div class="card-body card-styles">
        <div>
          <a href="/user/<%=user._id%>" class="card-name" title="view profile"><%=user.firstName %> <%=user.lastName %></a>
        </div>
        <div><%=user.email%></div>
        <div>Balance : <%=user.currentBalance%></div>
      </div>
    </div>
  </div>
  <% }); %>
</div>